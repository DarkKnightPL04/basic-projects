temperature = 0

print("----------")
if temperature > 30:
    print("It's a hot day!")
    print("Drink plenty of water")
elif temperature > 20:
    print("It's a nice day")
elif temperature > 10:
    print("It's a bit cold")
else:
    print("It's cold")
print("----------")

